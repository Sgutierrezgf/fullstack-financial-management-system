generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model IngresoEgreso {
  id        Int      @id @default(autoincrement())
  concepto  String
  monto     Float
  fecha     DateTime
  tipo      TipoMovimiento
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nombre    String
  correo    String
  telefono  String
  contrasena  String
  rol       Rol
}

// Enum para los roles de usuario
enum Rol {
  ADMIN
  USER
}

enum TipoMovimiento {
  INGRESO
  EGRESO
}